{
  "name": "susaas",
  "version": "0.0.1",
  "repository": "https://github.com/SAP-samples/btp-cf-cap-multitenant-susaas",
  "license": "Apache License 2.0",
  "description": "Sustainable SaaS",
  "engines": {
    "node": ">=16.x"
  },
  "jest": {
    "testTimeout": 15000
  },
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.11.4",
    "@sap_oss/alert-notification-client": "^1.4.0",
    "@sap/audit-logging": "^5",
    "@sap/cds": "^7.0.3",
    "@sap/cds-dk": "^7.0.3",
    "@sap/cds-mtxs": "^1.9.2",
    "@sap/xsenv": "^3.4.0",
    "@sap/xssec": "^3.2.17",
    "cds-swagger-ui-express": "^0.5.0",
    "cf-nodejs-logging-support": "^6",
    "cfenv": "^1",
    "express": "^4",
    "hdb": "^0.19",
    "node-fetch": "^2.6.7",
    "node-jose": "^2.1",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^0.1.0",
    "@sap/ux-specification": "^1.108.10",
    "axios": "^0.27.2",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "jest": "^29.6.1",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "start": "cds-serve --production",
    "dev-start": "cds-serve",
    "dev-start-mtx": "cds-serve --profile local-with-mtx",
    "api-start-local": "cds-serve srv-api/ db --with srv-api/api-service.js",
    "api-start-hybrid": "cds-serve srv-api/ --with srv-api/api-service.js --production",
    "test": "jest",
    "deploy:dev": "node node_modules/@sap/hdi-deploy/ --root gen/db",
    "init:broker": "cd broker && npm i && npm run init",
    "init:credstore": "node configs/automator/init-cred-store.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "cov2ap": {
      "plugin": true
    },
    "features": {
      "[production]": {
        "kibana_formatter": true
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "build": {
      "tasks": [
        {
          "for": "hana"
        },
        {
          "for": "hana",
          "src": "srv-api",
          "dest": "db",
          "options": {
            "model": "srv-api"
          }
        },
        {
          "for": "nodejs"
        },
        {
          "for": "mtx",
          "src": "srv"
        },
        {
          "for": "nodejs",
          "src": "srv-api",
          "options": {
            "model": "srv-api"
          }
        },
        {
          "for": "hana",
          "src": "db-com",
          "options": {
            "model": "db-com"
          }
        }
      ]
    },
    "requires": {
      "[production]": {
        "multitenancy": true,
        "toggles": true,
        "extensibility": true,
        "cds.xt.ExtensibilityService": {
          "element-prefix": [
            "x_"
          ],
          "extension-allowlist": [
            {
              "for": [
                "*"
              ]
            }
          ]
        }
      },
      "[development]": {
        "multitenancy": false
      },
      "[local-with-mtx]": {
        "multitenancy": true,
        "extensibility": true,
        "toggles": true,
        "cds.xt.ExtensibilityService": {
          "element-prefix": [
            "x_"
          ],
          "extension-allowlist": [
            {
              "for": [
                "*"
              ]
            }
          ]
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "alice": {
              "roles": [
                "Admin",
                "Member"
              ]
            },
            "carol": {
              "roles": [
                "Member"
              ]
            }
          }
        },
        "[local-with-mtx]": {
          "strategy": "mock",
          "users": {
            "alice": {
              "tenant": "t1",
              "roles": [
                "Admin",
                "cds.Subscriber",
                "cds.ExtensionDeveloper"
              ]
            },
            "carol": {
              "tenant": "t1",
              "roles": [
                "Member"
              ]
            },
            "bob": {
              "tenant": "t1-ext",
              "roles": [
                "Admin",
                "cds.Subscriber",
                "cds.ExtensionDeveloper"
              ]
            },
            "dave": {
              "tenant": "t2",
              "roles": [
                "Admin",
                "cds.Subscriber"
              ]
            },
            "erin": {
              "tenant": "t2",
              "roles": [
                "Member"
              ]
            },
            "*": false
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana-cloud",
          "vcap": {
            "label": "service-manager"
          }
        },
        "[development]": {
          "kind": "sql"
        },
        "[local-with-mtx]": {
          "kind": "sqlite",
          "beta": {
            "sqlMigration": "true"
          }
        }
      },
      "db-ext": {
        "[production]": {
          "model": "db/hana"
        },
        "[development]": {
          "model": "db/sqlite"
        },
        "[local-with-mtx]": {
          "model": "db/sqlite"
        }
      },
      "db-csv": {
        "[csv]": {
          "model": "test"
        }
      }
    }
  },
  "sapux": [
    "app/ui-admin-projects",
    "app/ui-admin-users",
    "app/ui-public-assessments",
    "app/ui-public-projects"
  ]
}